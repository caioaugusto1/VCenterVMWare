@model IEnumerable<ServerViewModel>

<link rel="stylesheet" href="~/theme/plugins/datatables-bs4/css/dataTables.bootstrap4.css" />

<div class="content-wrapper" style="min-height: 976.4px;">

    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Server</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Server</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <section class="content">
        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">List</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="list-servers-datatable" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>IP</th>
                                    <th>UserName</th>
                                    <th>Password</th>
                                    <th>Description</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var server in Model)
                                {
                                    <tr>
                                        <td>@server.IP</td>
                                        <td>@server.UserName</td>
                                        <td>
                                            *******
                                        </td>
                                        <td>@server.Description</td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@server.Id" class="btn btn-info btn-circle btn-sm"><i class="fas fa-edit"></i></a>

                                            <a asp-action="Details" asp-route-id="@server.Id" class="btn btn-facebook btn-circle btn-sm"><i class="fas fa-info"></i></a>

                                            <a asp-action="Delete" asp-route-id="@server.Id" class="btn btn-light btn-circle btn-sm"><i class="fas fa-plus"></i></a>

                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>

                </div>

            </div>
        </div>
    </section>
</div>

<script src="~/theme/plugins/jquery/jquery.js"></script>

@await Html.PartialAsync("~/Views/Shared/_partial/_scriptDataTables.cshtml")

<script src="~/js/Ultil/Util.js"></script>
<script src="~/js/Server/server.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
