@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> _userManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VCenter</title>

    @await Html.PartialAsync("~/Views/Shared/_partial/_cssImportBootstrap.cshtml")

</head>

<body class="hold-transition sidebar-mini">

    <div class="wrapper">

        @await Html.PartialAsync("~/Views/Shared/_partial/_TopMenu.cshtml")

        @await Html.PartialAsync("~/Views/Shared/_partial/_Menu.cshtml")

        @RenderBody()


    </div>

    @await Html.PartialAsync("~/Views/Shared/_partial/_scriptsBootstrap.cshtml")

    @RenderSection("Scripts", required: false)
</body>
</html>
























