@model IEnumerable<SnapshotViewModel>

<link rel="stylesheet" href="~/theme/plugins/datatables-bs4/css/dataTables.bootstrap4.css" />

<div class="content-wrapper" style="min-height: 976.4px;">

    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Snapshot</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Snapshot</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <section class="content">
        <div class="container-fluid">
            <!-- Small boxes (Stat box) -->
            <div class="row">
                <div class="col-md-4">
                    @await Html.PartialAsync("~/Views/Shared/_partial/_filter/_ServerDropBox.cshtml", new { servers = ViewBag.Servers })
                </div>

                <div style="margin-right:5px;">
                    @await Html.PartialAsync("~/Views/Shared/_partial/_filter/_SearchBtn.cshtml")
                </div>

                <div style="margin-right:5px;">
                    @await Html.PartialAsync("~/Views/Shared/_partial/_filter/_cleanBtn.cshtml")
                </div>
            </div>

        </div><!-- /.container-fluid -->
    </section>

    <section class="content">
        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">List</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="list-snapsshot-datatable" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Nome</th>
                                    <th>Nome da VM</th>
                                    <th>Data de Criação</th>
                                    <th>De Memória?</th>
                                    @*<th>Actions</th>*@
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>

                        </table>
                    </div>

                </div>

            </div>
        </div>
    </section>
</div>

@await Html.PartialAsync("~/Views/Shared/_partial/_modalAlert.cshtml")

<input hidden id="pageValueIdentity" value="GetByAPI" />

<script src="~/theme/plugins/jquery/jquery.js"></script>

@await Html.PartialAsync("~/Views/Shared/_partial/_scriptDataTables.cshtml")

<script src="~/js/Ultil/Util.js"></script>
<script src="~/js/Snapshot/Snapshot.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
